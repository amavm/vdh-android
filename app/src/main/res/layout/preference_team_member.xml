<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pref_team_member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_spacing"
        app:layout_constraintWidth_percent="0.3"
        android:textSize="@dimen/medium_font_size"
        tools:text="@string/settings_team_karim"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pref_team_member_role"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_spacing"
        app:layout_constraintWidth_percent="0.7"
        android:textSize="@dimen/medium_font_size"
        tools:text="@string/settings_team_karim_role"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pref_team_member_name"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>